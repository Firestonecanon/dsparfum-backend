    "sqlite3": "^5.1.7",
    "stripe": "^18.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "parfum",
    "admin",
    "backend",
    "sqlite"
  ],
